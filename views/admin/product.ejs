<body>
    <div class="main-content">
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title card-title">Products</h2>
                <a href="/admin/load-add-product" class="add-product-btn">Add Product+</a>
            </div>
            
            <!-- Search Bar -->
            <div class="card-header text-center mb-20">
                <form action="" method="get" class="d-inline">
                    <div class="search-container">
                        <div class="input-group input-group-sm border border-1 border-grey rounded-pill">
                            <input type="text" class="form-control border-0 rounded-pill" placeholder="Search products or brands" name="search" value="<%= search || '' %>">
                            <button class="btn border-0" type="submit">Search</button>
                        </div>
                    </div>
                </form>
            </div>
            
            <div class="card">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-product-name">Product Name</th>
                                <th class="col-image">Image</th>
                                <!-- <th class="col-brand">Brand</th> -->
                                <th class="col-category">Category</th>
                                <th class="col-price">Sale Price</th>
                                <!-- <th class="col-offer-price">Offer Price</th>
                                <th class="col-offer">Offer</th> -->
                                <th class="col-quantity">Quantity</th>
                                <th class="col-action">Block/Unblock</th>
                                <th class="col-action">Edit</th>
                                <th class="col-action">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data && data.length > 0) { %>
                                <% for (let i = data.length - 1; i >= 0; i--) { 
                                    let product = data[i]; %>
                                    <tr>
                                        <td class="col-product-name"><%= product.productName %></td>
                                        <td class="col-image">
                                            <img src="/uploads/product-images/<%= product.productImage && product.productImage.length > 0 ? product.productImage[0] : 'default-product.jpg' %>" 
                                                 alt="<%= escape(product.productName || 'Product Image') %>" 
                                                 onerror="this.src='/img/default-product.jpg';"
                                                 style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                                        </td>
                                        <td class="col-brand"><%= product.brand || 'N/A' %></td>
                                        <td class="col-category"><%= product.category ? product.category.name : 'N/A' %></td>
                                        <td class="col-price"><%= product.salePrice.toFixed(2) %></td>
                                        <td class="col-offer-price"><%= product.offerPrice ? product.offerPrice.toFixed(2) : 'N/A' %></td>
                                        <td class="col-offer">
                                            <div class="action-col">
                                                <% if (product.hasOffer) { %>
                                                    <a href="/admin/remove-offer/<%= escape(product._id) %>" class="action-btn btn-offer">Remove</a>
                                                <% } else { %>
                                                    <a href="/admin/add-offer/<%= escape(product._id) %>" class="action-btn btn-offer">Add Offer</a>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td class="col-quantity"><%= product.quantity %></td>
                                        <td class="col-action">
                                            <div class="action-col">
                                                <% if (product.isBlocked) { %>
                                                    <a  
                                                       class="action-btn btn-unblock"
                                                       aria-label="Unblock product <%= product.productName %>"
                                                       onclick="confirmUserAction('<%= product._id %>', 'unblock')">
                                                        Unblock
                                                    </a>
                                                <% } else { %>
                                                    <a 
                                                       class="action-btn btn-block"
                                                       aria-label="Block product <%= product.productName %>"
                                                       onclick="confirmUserAction('<%= product._id %>', 'block')">
                                                        Block
                                                    </a>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td class="col-action">
                                            <div class="action-col">
                                                <a href="/admin/editProduct?id=<%=product._id %>" class="action-btn btn-edit">Edit</a>
                                            </div>
                                        </td>
                                        <td class="col-action">
                                            <div class="action-col">
                                                <a 
                                                   class="action-btn btn-delete"
                                                   aria-label="Delete product <%= product.productName %>"
                                                   onclick="confirmDeleteProduct('<%= product._id %>')">
                                                    Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } else { %>
                                <tr>
                                    <td colspan="10" style="text-align: center; padding: 20px;">No products found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
    
    <!-- Pagination -->
<nav aria-label="Page navigation" class="pagination-container">
    <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <% if (currentPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" aria-label="Previous">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <span class="page-link">
                    <i class="fas fa-chevron-left"></i>
                </span>
            </li>
        <% } %>

        <!-- Page Numbers -->
        <% 
            const maxPagesToShow = 5;
            let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
            let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);

            if (endPage - startPage + 1 < maxPagesToShow) {
                startPage = Math.max(1, endPage - maxPagesToShow + 1);
            }
        %>

        <!-- First Page -->
        <% if (startPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="?page=1<%= search ? '&search=' + encodeURIComponent(search) : '' %>">1</a>
            </li>
            <% if (startPage > 2) { %>
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            <% } %>
        <% } %>

        <!-- Page Range -->
        <% for(let i = startPage; i <= endPage; i++) { %>
            <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                    <%= i %>
                </a>
            </li>
        <% } %>

        <!-- Last Page -->
        <% if (endPage < totalPages) { %>
            <% if (endPage < totalPages - 1) { %>
                <li class="page-item disabled">
                    <span class="page-link">...</span>
                </li>
            <% } %>
            <li class="page-item">
                <a class="page-link" href="?page=<%= totalPages %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                    <%= totalPages %>
                </a>
            </li>
        <% } %>

        <!-- Next Button -->
        <% if (currentPage < totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" aria-label="Next">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <span class="page-link">
                    <i class="fas fa-chevron-right"></i>
                </span>
            </li>
        <% } %>
    </ul>
</nav>
