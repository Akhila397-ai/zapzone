<style>
    /* Clean Product Card Styles */
    .product-item {
        border: 1px solid #e5e5e5;
        border-radius: 5px;
        background-color: #fff;
        transition: all 0.3s;
        margin-bottom: 20px;
    }

    .product-item:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .product-img-wrap {
        position: relative;
        padding: 15px;
        background-color: #f5f5f5;
        text-align: center;
    }

    .product-img-wrap img {
        max-width: 100%;
        height: auto;
    }

    .wishlist-btn {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .wishlist-btn a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        background-color: white;
        border-radius: 50%;
        box-shadow: 0 2px 5px rgba(0,0,0,0.15);
        color: #e74c3c;
    }

    .product-details {
        padding: 12px 15px;
    }

    .product-details h6 {
        font-size: 15px;
        margin-bottom: 5px;
        color: #333;
    }

    .price-box {
        font-weight: bold;
        font-size: 16px;
        margin-bottom: 10px;
        color: #333;
    }

    .cart-btn {
        display: block;
        width: 100%;
        padding: 8px 0;
        background-color:black;
        color: white;
        text-align: center;
        border-radius: 4px;
        font-size: 13px;
        font-weight: 600;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .cart-btn:hover {
        background-color: #c0392b;
        color: white;
        text-decoration: none;
    }

    .hero__text {
        color: white;
    }
</style>
