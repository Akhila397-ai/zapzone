<%- include('../partials/admin/header') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    
    :root {
        --primary-color: #FFAA8A;
        --primary-dark: #FF8C61;
        --primary-light: #FFD4C5;
        --secondary-color: #2D3047;
        --text-dark: #2D3047;
        --text-light: #6B7280;
        --background-light: #FFF5F2;
        --white: #FFFFFF;
        --danger: #FF4B4B;
        --success: #22C55E;
    }

    .content-wrapper {
        padding: 2rem;
        margin-top: -30px;
        margin-left: 230px;
        transition: all 0.3s ease;
        background-color: var(--background-light);
        min-height: calc(100vh - 70px);
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(45, 48, 71, 0.05);
        margin-bottom: 1.5rem;
        background: var(--white);
        transition: all 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 8px 24px rgba(255, 140, 97, 0.12);
        transform: translateY(-2px);
    }

    .card-body {
        padding: 1.5rem;
        margin-left: 50px;
    }

    .table {
        margin-bottom: 0;
    }

    .table thead th {
        background: linear-gradient(135deg, #6B6AE4 0%, #5655c6 100%);
        color: var(--white);
        font-weight: 500;
        border: none;
        padding: 0.5rem;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        white-space: nowrap;
        position: relative;
    }

    .table thead th:first-child {
        border-top-left-radius: 8px;
    }

    .table thead th:last-child {
        border-top-right-radius: 8px;
    }

    .table thead th::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background: rgba(255, 255, 255, 0.1);
    }

    .table tbody td {
        padding: 1rem;
        vertical-align: middle;
        color: var(--text-dark);
        font-size: 0.9rem;
        border-color: rgba(107, 106, 228, 0.1);
        background-color: var(--white);
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #F8F7FF;
        width: 20px;
    }

    .table-hover tbody tr:hover {
        background-color: #EEEEFF;
        transition: all 0.3s ease;
    }

    .table th.user-id-col {
        width: 80px;
    }

    .table th.user-image-col {
        width: 100px;
    }

    .table th.name-col {
        width: 180px;
    }

    .table th.email-col {
        width: 220px;
    }

    .table th.phone-col {
        width: 150px;
    }

    .table th.date-col {
        width: 150px;
    }

    .table th.actions-col {
        width: 120px;
    }

    .user-image {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        background-color: #eef2ff;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border: 2px solid #6B6AE4;
        transition: all 0.3s ease;
    }

    .user-image:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 12px rgba(107, 106, 228, 0.15);
    }

    .user-icon {
        color: #6B6AE4;
        font-size: 22px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .block-button {
        background-color: var(--danger);
        color: var(--white);
        border: none;
        border-radius: 25px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        font-size: 0.875rem;
        transition: all 0.3s ease;
    }

    .block-button:hover {
        background-color: #E43D3D;
        color: var(--white);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(255, 75, 75, 0.2);
    }

    .unblock-button {
        background-color: var(--success);
        color: var(--white);
        border: none;
        border-radius: 25px;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        font-size: 0.875rem;
        transition: all 0.3s ease;
    }

    .unblock-button:hover {
        background-color: #1CAD4E;
        color: var(--white);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(34, 197, 94, 0.2);
    }

    .input-group-text {
        border: 1px solid #6B6AE4;
        border-right: none;
        background-color: var(--white);
        color: #6B6AE4;
        padding: 0.75rem 1rem;
    }

    .form-control {
        border: 1px solid #6B6AE4;
        border-left: none;
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
        color: var(--text-dark);
        height: 45px;
    }

    .form-control:focus {
        border-color: #6B6AE4;
        box-shadow: 0 0 0 3px rgba(107, 106, 228, 0.1);
    }

    .btn-primary {
        background-color: var(--primary-color) !important;
        border-color: var(--primary-color) !important;
        color: var(--white);
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: var(--primary-dark) !important;
        border-color: var(--primary-dark) !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(255, 140, 97, 0.2);
    }

    .search-button, .clear-search-btn {
        height: 45px;
        padding: 0 1.5rem;
        font-size: 0.9rem;
        font-weight: 500;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        flex: 1;
    }

    .search-button {
        background-color: #6B6AE4 !important;
        border-color: #6B6AE4 !important;
        color: var(--white);
    }

    .search-button:hover {
        background-color: #5655c6 !important;
        border-color: #5655c6 !important;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(107, 106, 228, 0.2);
    }

    .clear-search-btn {
        background-color: #e4e4e7;
        border: none;
        color: #4b5563;
    }

    .clear-search-btn:hover {
        background-color: #d4d4d8;
        color: #1f2937;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(45, 48, 71, 0.1);
    }

    .button-group {
        display: flex;
        gap: 1rem;
    }

    .pagination {
        margin-top: 1.5rem;
        gap: 0.5rem;
        justify-content: center;
    }

    .page-item {
        margin: 0 2px;
    }

    .page-link {
        border: none;
        min-width: 36px;
        height: 36px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6B6AE4;
        font-weight: 500;
        border-radius: 8px;
        transition: all 0.3s ease;
        background-color: #F8F7FF;
    }

    .page-link:hover {
        background-color: #EEEEFF;
        color: #5655c6;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(107, 106, 228, 0.1);
    }

    .page-item.active .page-link {
        background: linear-gradient(135deg, #6B6AE4 0%, #5655c6 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(107, 106, 228, 0.2);
    }

    .page-item.disabled .page-link {
        background-color: #F1F1F4;
        color: #A0A0A0;
        cursor: not-allowed;
    }

    .modal-content {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(107, 106, 228, 0.15);
        overflow: hidden;
    }

    .modal-header {
        background: linear-gradient(135deg, #6B6AE4 0%, #5655c6 100%);
        border-bottom: none;
        padding: 1.5rem;
        position: relative;
    }

    .modal-title {
        color: white;
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0;
    }

    .btn-close {
        background: transparent url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23fff'%3e%3cpath d='M.293.293a1 1 0 011.414 0L8 6.586 14.293.293a1 1 0 111.414 1.414L9.414 8l6.293 6.293a1 1 0 01-1.414 1.414L8 9.414l-6.293 6.293a1 1 0 01-1.414-1.414L6.586 8 .293 1.707a1 1 0 010-1.414z'/%3e%3c/svg%3e") center/1em auto no-repeat;
        opacity: 0.8;
        padding: 1rem;
    }

    .btn-close:hover {
        opacity: 1;
    }

    .modal-body {
        padding: 2rem;
        background-color: white;
    }

    .modal-body p {
        color: #4A5568;
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    .modal-footer {
        border-top: 1px solid rgba(107, 106, 228, 0.1);
        padding: 1rem 2rem;
        background-color: #F8F7FF;
    }

    .modal-button-group {
        display: flex;
        gap: 1rem;
        width: 100%;
        justify-content: flex-end;
    }

    .modal-btn {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        min-width: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .modal-btn-confirm {
        background: linear-gradient(135deg, #6B6AE4 0%, #5655c6 100%);
        color: white;
        border: none;
    }

    .modal-btn-confirm:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(107, 106, 228, 0.2);
    }

    .modal-btn-cancel {
        background-color: #F1F1F4;
        color: #4A5568;
        border: none;
    }

    .modal-btn-cancel:hover {
        background-color: #E2E2E7;
        color: #2D3748;
    }

    /* Responsive adjustments */
    @media screen and (max-width: 992px) {
        .content-wrapper {
            margin-left: 0;
            padding: 1rem;
        }
    }

    @media screen and (max-width: 768px) {
        .responsive-header {
            flex-direction: column;
            align-items: start !important;
            gap: 1rem;
        }
        
        .d-flex.gap-2 {
            width: 100%;
        }
        
        .btn {
            padding: 0.6rem 1rem;
        }

        .table thead {
            display: none;
        }

        .table, .table tbody, .table tr, .table td {
            display: block;
            width: 100%;
        }

        .table tr {
            margin-bottom: 1rem;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 4px rgba(45, 48, 71, 0.05);
        }

        .table td {
            text-align: right;
            padding: 0.75rem 1rem;
            position: relative;
            padding-left: 50%;
        }

        .table td::before {
            content: attr(data-label);
            position: absolute;
            left: 1rem;
            width: 45%;
            text-align: left;
            font-weight: 500;
        }

        .button-group {
            flex-direction: row;
            width: 100%;
        }

        .search-button, .clear-search-btn {
            width: 50%;
        }
       
    }

   
    .header-card {
        background: linear-gradient(135deg, #F5F7FF 0%, #EEF2FF 100%);
        margin-bottom: 1.5rem;
        padding: 1.5rem;
        border: 1px solid rgba(107, 106, 228, 0.1);
        box-shadow: 0 4px 12px rgba(107, 106, 228, 0.05);
    }

    .header-title {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .header-title h1 {
        color: #4F46E5;
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
        padding-bottom: 0.5rem;
    }

    .header-title h1::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, #6B6AE4 0%, #4F46E5 100%);
        border-radius: 2px;
    }
</style>

<body>
    <div class="content-wrapper">
        
        <h2 class="content-title card-titles">Users</h2>
     
        <div class="card search-section">
            <div class="card-body">
                <form action="/admin/users" method="GET">
                    <div class="row">
                        <div class="col-md-8 mb-3 mb-md-0">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" id="searchInput" name="search" 
                                       value="<%= searchQuery %>" placeholder="Search users by name or email...">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="button-group">
                                <button type="submit" class="search-button">
                                    <i class="fas fa-search"></i> Search
                                </button>
                                <button type="button" class="clear-search-btn" onclick="clearSearch()">
                                    <i class="fas fa-times"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table Section -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                            <tr>
                                <th class="user-id-col">USER ID</th>
                                <th class="user-image-col">USER IMAGE</th>
                                <th class="name-col">NAME</th>
                                <th class="email-col">EMAIL</th>
                                <th class="phone-col">PHONE</th>
                                <th class="date-col">DATE OF CREATION</th>
                                <th class="actions-col">ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < users.length; i++) { %>
                            <tr>
                                <td><%= i+1 %></td>
                                <td>
                                    <div class="user-image">
                                        <i class="fas fa-user user-icon"></i>
                                    </div>
                                </td>
                                <td><%= users[i].name %></td>
                                <td><%= users[i].email %></td>
                                <td><%= users[i].phone %></td>
                                <td><%= new Date(users[i].createdOn).toLocaleDateString() %></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <% if (users[i].isBlocked === false) { %>
                                            <button type="button" class="btn block-button" 
                                                    onclick="actionValidate('<%= users[i]._id %>')">
                                                BLOCK
                                            </button>
                                        <% } else { %>
                                            <a href="/admin/unblockCustomer?id=<%= users[i]._id %>" 
                                               class="btn unblock-button">
                                                UNBLOCK
                                            </a>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <nav aria-label="Page navigation">
            <ul class="pagination">
                <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %><%= searchQuery ? '&search=' + searchQuery : '' %>" aria-label="Previous">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                <% } %>
                
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %><%= searchQuery ? '&search=' + searchQuery : '' %>">
                            <%= i %>
                        </a>
                    </li>
                <% } %>
                
                <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %><%= searchQuery ? '&search=' + searchQuery : '' %>" aria-label="Next">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>


    <div class="modal fade" tabindex="-1" id="userAction">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Block User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to block this user?</p>
                    <form action="/admin/blockCustomer" method="GET">
                        <input type="hidden" id="user_actionID" name="id">
                        <div class="modal-button-group">
                            <button type="button" class="modal-btn modal-btn-cancel" data-bs-dismiss="modal">
                                <i class="fas fa-times"></i> Cancel
                            </button>
                            <button type="submit" class="modal-btn modal-btn-confirm">
                                <i class="fas fa-ban"></i> Block User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        function actionValidate(userID) {
            document.getElementById('user_actionID').value = userID;
            const modal = new bootstrap.Modal(document.getElementById('userAction'));
            modal.show();
        }

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            window.location.href = '/admin/users';
        }
    </script>
</body>