    <style>

        /* Pagination Styles */
.pagination-container {
    margin-top: 60px;
    display: flex;
    justify-content: center;
}

.pagination {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
}

.page-item {
    margin: 0 5px;
}

.page-link {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px 12px;
    font-size: 14px;
    color: var(--text-dark);
    background-color: var(--white);
    border: 1px solid #ddd;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.2s ease, color 0.2s ease;
}

.page-link:hover {
    background-color: var(--primary-light);
    color: var(--text-dark);
}

.page-item.active .page-link {
    background-color: var(--table-header-color);
    color: var(--white);
    border-color: var(--table-header-color);
}

.page-item.disabled .page-link {
    color: var(--text-light);
    background-color: var(--white);
    border-color: #ddd;
    cursor: not-allowed;
}

.page-link i {
    font-size: 12px;
}

    
        /* Table specific improvements */
.table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    table-layout: fixed; /* This helps maintain consistent column widths */
}

.table thead th {
    padding: 12px 15px;
    text-align: left;
    font-size: 14px;
    font-weight: 600;
    vertical-align: middle;
}

.table tbody td {
    padding: 12px 15px;
    font-size: 14px;
    color: var(--text-dark);
    border-bottom: 1px solid #eee;
    vertical-align: middle;
    word-break: break-word; /* Prevents text from overflowing cells */
}

/* Remove hover effect on table rows */
.table tbody tr:hover {
    background-color: transparent; /* This removes the highlight on hover */
}

/* Column width specifications */
.table th.col-product-name, 
.table td.col-product-name {
    width: 15%;
}

.table th.col-image, 
.table td.col-image {
    width: 10%;
    text-align: center;
}

.table th.col-brand, 
.table td.col-brand,
.table th.col-category, 
.table td.col-category {
    width: 12%;
}

.table th.col-price, 
.table td.col-price {
    width: 8%;
    text-align: right;
}

.table th.col-offer-price, 
.table td.col-offer-price {
    width: 8%;
    text-align: right;
}

.table th.col-offer, 
.table td.col-offer,
.table th.col-action, 
.table td.col-action {
    width: 10%;
    text-align: center;
}

.table th.col-quantity, 
.table td.col-quantity {
    width: 7%;
    text-align: center;
}

/* Consistent button styles */
.action-btn {
    display: inline-block;
    width: 100px;
    text-align: center;
    border: none;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.2s ease, transform 0.1s ease;
    padding: 8px 12px;
    border-radius: 4px;
    font-size: 13px;
    margin: 3px auto;
    color:#eee;
    background-color: #c82333;
}

.btn-block {
    background-color: #dc3545;
    color: var(--white);
}

.btn-unblock {
    background-color: #28a745;
    color: var(--white);
}

.btn-edit {
    background-color: #3F51B5;
    color: var(--white);
}

.btn-offer {
    background-color: #3F51B5;
    color: var(--white);
}

/* Force buttons to be the same width */
.action-col {
    width: 100%;
    display: flex;
    justify-content: center;
}

/* Improve responsive behavior */
@media (max-width: 992px) {
    .table-responsive {
        overflow-x: auto;
    }
    
    .table {
        min-width: 900px; /* Force minimum width for scrolling on smaller screens */
    }
